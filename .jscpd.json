{
  "threshold": 5,
  "reporters": ["html", "console", "badge"],
  "ignore": [
    "**/node_modules/**",
    "**/.next/**",
    "**/dist/**",
    "**/build/**",
    "**/.git/**",
    "**/coverage/**",
    "**/*.min.js",
    "**/*.d.ts",
    "**/prisma/migrations/**"
  ],
  "gitignore": true,
  "mode": "mild",
  "format": ["typescript", "javascript", "jsx", "tsx"],
  "output": "./reports/jscpd",
  "absolute": true,
  "noSymlinks": true,
  "skipLocal": true,
  "minLines": 5,
  "minTokens": 50,
  "maxLines": 500,
  "maxSize": "30kb",
  "formatsExts": {
    "typescript": ["ts", "tsx"],
    "javascript": ["js", "jsx"]
  }
}
